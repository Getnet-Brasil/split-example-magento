<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Quote\Model\Quote\Item\ToOrderItem">
        <plugin name="sub_seller_id" 
            type="Getnet\SplitExampleMagento\Plugin\Magento\Quote\Model\Quote\Item\SubSellerIdToOrderItem" />
    </type>

    <virtualType name="PaymentMagentoBoletoOrderRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="splitPayment" xsi:type="string">Getnet\SplitExampleMagento\Gateway\Request\Boleto\SplitPaymentDataRequest</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="PaymentMagentoCcAuthorizationRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="splitPayment" xsi:type="string">Getnet\SplitExampleMagento\Gateway\Request\Card\SplitPaymentDataRequest</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="PaymentMagentoCcVaultRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="splitPayment" xsi:type="string">Getnet\SplitExampleMagento\Gateway\Request\Card\SplitPaymentDataRequest</item>
            </argument>
        </arguments>
    </virtualType>

